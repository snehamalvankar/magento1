<config>

	<modules>
		<Ax_Zoom>
			<version>1.1.3</version>
		</Ax_Zoom>
	</modules>

	<global>
		<helpers>
			<axzoom>
				<class>Ax_Zoom_Helper</class>
			</axzoom>
		</helpers>
		<models>
			<axzoom>
				<class>Ax_Zoom_Model</class>
				<resourceModel>axzoom_resource</resourceModel>
			</axzoom>
			<axzoom_resource>
                <class>Ax_Zoom_Model_Resource</class>
                <entities>
                    <table_ax360set>
                        <table>ajaxzoom360set</table>
                    </table_ax360set>
                    <table_ax360>
                        <table>ajaxzoom360</table>
                    </table_ax360>
                    <table_axproducts>
                        <table>ajaxzoomproducts</table>
                    </table_axproducts>
                </entities>
			</axzoom_resource>
		</models>
		<blocks>
			<zoom>
				<class>Ax_Zoom_Block</class>
			</zoom>
			<adminhtml>
				<rewrite>
					<catalog_product_edit_tabs>Ax_Zoom_Block_Adminhtml_Tabs</catalog_product_edit_tabs>
				</rewrite>
			</adminhtml>
		</blocks>
        <resources>
            <axzoom_setup>
                <setup>
                    <module>Ax_Zoom</module>
                </setup>
            </axzoom_setup>
        </resources>		
	</global>

	<frontend>
		<translate>
			<modules>
				<Ax_Zoom>
					<files>
						<default>Ax_Zoom.csv</default>
					</files>
				</Ax_Zoom>
			</modules>
		</translate>

		<layout>
			<updates>
				<ax_zoom>
					<file>axzoom.xml</file>
				</ax_zoom>
			</updates>
		</layout>

		<events>
            <catalog_controller_product_init>
                <observers>
                    <ax_zoom_model_observer>
                        <type>singleton</type>
                        <class>Ax_Zoom_Model_Observer</class>
                        <method>productBefore</method>
                    </ax_zoom_model_observer>
                </observers>
            </catalog_controller_product_init>

            <core_block_abstract_to_html_before>
                <observers>
                    <ax_zoom_model_observer>
                        <type>singleton</type>
                        <class>Ax_Zoom_Model_Observer</class>
                        <method>coreBlockBefore</method>
                    </ax_zoom_model_observer>
                </observers>
            </core_block_abstract_to_html_before>
		</events>
	</frontend>
	
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ax_Zoom before="Mage_Adminhtml">Ax_Zoom</Ax_Zoom>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>    

	<adminhtml>
		<translate>
			<modules>
				<Ax_Zoom>
					<files>
						<default>Ax_Zoom.csv</default>
					</files>
				</Ax_Zoom>
			</modules>
		</translate>

		<layout>
			<updates>
				<ax_zoom>
					<file>axzoom.xml</file>
				</ax_zoom>
			</updates>
		</layout>

        <events>
            <catalog_product_prepare_save>
                <observers>
                    <ax_zoom_model_observer>
                        <type>singleton</type>
                        <class>Ax_Zoom_Model_Observer</class>
                        <method>save360</method>
                    </ax_zoom_model_observer>
                </observers>
            </catalog_product_prepare_save>

            <catalog_product_delete_before>
                <observers>
                    <ax_zoom_model_observer>
                        <type>singleton</type>
                        <class>Ax_Zoom_Model_Observer</class>
                        <method>deleteProduct</method>
                    </ax_zoom_model_observer>
                </observers>
            </catalog_product_delete_before>            

            <catalog_product_save_before>
                <observers>
                    <ax_zoom_model_observer>
                        <type>singleton</type>
                        <class>Ax_Zoom_Model_Observer</class>
                        <method>productSaveBefore</method>
                    </ax_zoom_model_observer>
                </observers>
            </catalog_product_save_before>
            
            <catalog_product_save_after>
                <observers>
                    <ax_zoom_model_observer>
                        <type>singleton</type>
                        <class>Ax_Zoom_Model_Observer</class>
                        <method>productSaveAfter</method>
                    </ax_zoom_model_observer>
                </observers>
            </catalog_product_save_after>
           
        </events>
        
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<axzoom_options>
											<title>AJAX ZOOM Settings</title>
										</axzoom_options>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		
	</adminhtml>

