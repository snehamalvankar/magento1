<?php
$_helper = $this->_helper;
?>
<?php if ($this->canShow()): ?>
    <?php $question = $_helper->getSurveyQuestion(); ?>
    <?php if ($question && $question->getId()): ?>
        <?php $answers = $_helper->getSurveyValues(); ?>
        <!-- Survey -->
        <div id="one-step-checkout-order-review-survey-wrapper">
            <div class="securedcheckout-survey input-box">
                <input type="hidden" name="securedcheckout_survey_question"
                       value="<?php echo $question->getId(); ?>"/>
                <label for="one-step-checkout-survey"><?php echo $this->escapeHtml($question->getPollTitle()); ?></label>
                <select style="" name="securedcheckout_survey_answer" id="one-step-checkout-survey">
                    <option value=""><?php echo $this->__('Please choose'); ?></option>
                    <?php foreach ($answers as $answer):
                        ?>
                        <option
                            value="<?php echo $answer->getId() ?>"><?php echo $this->escapeHtml($answer->getAnswerTitle()) ?></option>
                    <?php endforeach; ?>
                </select>
            </div>
        </div>
    <?php endif; ?>
<?php endif; ?>