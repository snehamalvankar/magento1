<?php $_helperConfig = Mage::helper('securedcheckout/config'); ?>
<?php $isShow = $_helperConfig->isEnabledReviewCartSection() ?>
<div id="one-step-checkout-review-items">
    <div id="one-step-checkout-review-items-table">
        <?php if ($isShow) : ?>
            <?php echo $this->getHelperTimerBlockHtml(); ?>
            <table class="one-step-checkout-cart-table">
                <col/>
                <col width="1"/>
                <col width="1"/>
                <thead>
                <tr>
                    <th class="name a-center" style="width:70%;"><?php echo $this->__('Product Name') ?></th>
                    <th class="a-center qty" style="width:16%;"><?php echo $this->__('Qty') ?></th>
                    <th class="total" style="width:30%"><?php echo $this->__('Subtotal') ?></th>
                    <th class="hidden-col-remove">&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                <?php foreach ($this->getItems() as $_item): ?>
                    <?php echo $this->getItemHtml($_item) ?>
                <?php endforeach ?>
                </tbody>
                <?php echo $this->getChildHtml('totals'); ?>
            </table>
        <?php else: ?>
            <div class="grand-total col-mg mg-12">
            <span>
                <?php echo $this->__('Grand Total: ') ?>
            </span>
                <?php echo $this->getGrandTotal(); ?>
            </div>
        <?php endif; ?>
    </div>
</div>
