<div class="col-wrapper" id="one-step-checkout-order-review">
    <?php $blockNumber = $this->getNumbering(true); ?>
    <?php $isNoColspanLayout = $this->isNoColspanLayout(); ?>
    <?php if ($blockNumber): ?>
        <div class="onestep-title-number">
            <span class="one-step-checkout-number"><?php echo $blockNumber; ?></span>

            <h2>
                <?php echo $this->__('ORDER REVIEW'); ?></h2>
        </div>
    <?php else: ?>
        <div class="onestep-title">
            <h2>
                <i class="fa fa-check-square"></i>
                <?php echo $this->__('ORDER REVIEW'); ?></h2>
        </div>
    <?php endif; ?>
    <div class="one-step-checkout-order-review-cart">
        <?php echo $this->getChildHtml('review.items') ?>
    </div>
    <?php if ($this->_helperConfig->isShowEditCartLink()): ?>
        <p class="col-wide forgot-item">
            <span>
                 <?php echo $this->__('Forgot an item?') ?>&nbsp;<a
                    href="<?php echo $this->getUrl('checkout/cart') ?>"><?php echo $this->__('Edit your cart') ?></a>
            </span>
        </p>
    <?php endif; ?>
    <div class="mc-clear"></div>
    <?php if ($isNoColspanLayout) {
        $colClass = 'mg-lg-12 mg-md-12 mg-sm-12 mg-xs-6';
    } else {
        $colClass = 'mg-lg-6 mg-md-6 mg-sm-12 mg-xs-6';
    } ?>
    <div class="row-mg discount-section">
        <div class="col-mg <?php echo $colClass ?>">
            <div id="one-step-checkout-review-coupon">
                <?php echo $this->getChildHtml('review.coupon') ?>
            </div>
        </div>
        <?php echo $this->getChildHtml('review.discount') ?>
        <?php echo $this->getChildHtml('review.comment') ?>
    </div>
    <div class="row-mg mc-clear">
        <div class="col-mg <?php echo $colClass ?>">
            <?php $reviewAddition = $this->getChildHtml('review.addition'); ?>
            <?php if ($reviewAddition): ?>
                <div class="block-wrapper">
                    <?php echo $reviewAddition; ?>
                </div>
            <?php endif; ?>
        </div>
        <div class="col-mg <?php echo $colClass ?>">
            <div class="block-wrapper block-order">
                <?php echo $this->getChildHtml('review.term'); ?>
                <?php echo $this->getChildHtml('review.place.order') ?>
            </div>
        </div>
    </div>
    <div id="one-step-checkout-order-review-extra-wrapper">
        <?php echo $this->getChildHtml('review.extra'); ?>
    </div>
</div>
