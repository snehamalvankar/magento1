<?php $_helper = Mage::helper('catalog/category') ?>
<?php $_categories = $_helper->getStoreCategories() ?>

<?php $I = 0;
$div = 0; ?>
<?php if (count($_categories) > 0): ?>

    <div class="container ">

        <?php foreach ($_categories as $_category): ?>

                <div class="row">
                    <div class="<?php  $I++; if ($I == 1) {
                        echo 'firstH';
                    } elseif ($I == 2) {
                        echo 'secondH';
                    } elseif ($I == 3) {
                        echo 'thirdH';
                    } elseif ($I == 4) {
                        echo 'fourthH';
                    } elseif ($I == 5) {
                        echo 'fifthH';
                    } else {
                        echo 'sixthH';
                    }

                    ?>" >
                        <a href="<?php echo $_helper->getCategoryUrl($_category) ?>">

                            <?php echo $_category->getName() . '<br/>';

                            $products = Mage::getModel('catalog/product')
                                ->getCollection()
                                ->addCategoryFilter($_category)
                                ->addAttributeToSelect(array('name', 'product_url', 'small_image'))
                                ->load();
                            ?>
                        </a>
                    </div>
                </div>



            <div class="row subcontent" >
                <?php $i = 1;
                foreach ($products as $product): ?>

                    <?php if ($i == 5): ?>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6  sub-padding  " >

                            <a href="<?php echo $product->getProductUrl() ?>"
                               title="<?php echo $this->stripTags($product->getName(), null, true) ?>">
                                <img class="lightborder img img-responsive"
                                     src="<?php echo $this->helper('catalog/image')->init($product, 'small_image')->resize(500) ?>"
                                     alt="<?php echo $this->stripTags($product->getName(), null, true) ?>"/>
                            </a>


                        </div>
                    <?php else: ?>

                        <?php if ($i == 1) : ?>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6  " >
                            <div class="row" >
                        <?php endif; ?>
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-6 subpadding " >
                            <a href="<?php echo $product->getProductUrl() ?>"
                               title="<?php echo $this->stripTags($product->getName(), null, true) ?>">
                                <img class="lightborder img img-responsive"
                                     src="<?php echo $this->helper('catalog/image')->init($product, 'small_image')->resize(250) ?>"
                                     alt="<?php echo $this->stripTags($product->getName(), null, true) ?>"/>
                            </a>
                        </div>
                        <?php if ($i == 4) : ?>
                            </div>
                            </div>
                        <?php endif; ?>
                    <?php endif; ?>
                    <?php if ($i == 5) {
                        break;
                    }
                    $i++;

                endforeach; ?>


            </div>


        <?php endforeach; ?>
    </div>
<?php endif; ?>






