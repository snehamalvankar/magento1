<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>




    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<?php
$category = Mage::getSingleton('catalog/layer')->getCurrentCategory();
$_helper = $this->helper('catalog/output');
$_productCollection = Mage::getModel('catalog/product')
    ->getCollection()
    ->addCategoryFilter($category)
    ->addAttributeToSelect(array('name', 'product_url', 'small_image'))
    ->load();
?>
<br/>
<br/>
<?php if (!$_productCollection->count()): ?>
    <p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
    <div class="category-products">
        <div class="container">
            <div class="pin">
                <?php foreach ($_productCollection as $_product): ?>

                    <div class="lightborder item " >

                        <div>

                            <a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>"
                               class="glyphicon glyphicon-star-empty link-wishlist"
                               style="background: none ;margin-left: 5%; margin-right: 5% ;border: none "></a>

                            <button type="button" class="glyphicon glyphicon-plus-sign "
                                    style="background: none ;margin-right:5% ;border: none ">
                            </button>

                            <button id="share" type="button" class="glyphicon glyphicon-share-alt"
                                    style="background: none ;border: none ">

                            </button>


                        </div>
                        <div class=" well " style="padding: 0px 0px 0px 0px ; margin: 0px 0px 1px 0px">
                            <a href="<?php echo $_product->getProductUrl() ?>"
                               title="<?php echo $this->stripTags($_product->getName(), null, true) ?>">
                                <img width="100%"
                                     src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image') ?>"
                                     alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>"/>
                            </a>
                        </div>
                        <div class="lightborder" style=" margin: 2px 0px 1px 0px ;" >
                            <div class="row pricerow" >
                                <ul class="list-unstyled">
                                    <li style="text-align: left">
                                        <h4 class="list-group-item-heading product-description">
                                            <a style="color: black ; font-family: bold"
                                               href="<?php echo $_product->getProductUrl() ?>"
                                               title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName(), 'name') ?>
                                            </a>
                                            <?php $id=$_product->getId();
                                            echo "(".$id.")"?>
                                        </h4>

                                    </li>
                                    <li style="text-align: left; color: grey">
                                        <?php
                                        $type=$_product->getTypeId();
                                        echo "$type";
                                        ?>
                                    </li>
                                    <li style="text-align: right">
                                        <div class="product-price" style="color: orangered;" >
                                            <?php
                                                $_product = Mage::getModel('catalog/product')->load($id);
                                                $_actualPrice = $_product->getPrice();
                                                $_formattedActualPrice = Mage::helper('core')->currency($_product->getPrice(),true,false);
                                                $_formattedSpecialPrice = Mage::helper('core')->currency($_product->getFinalPrice(),true,false);

                                            if($_formattedActualPrice===$_formattedSpecialPrice)
                                            {
                                                echo "<br/>"."Actual Price : " .$_formattedActualPrice."<br/>";

                                            }
                                            else
                                            {
                                                echo "<br/>"."Actual Price : " .$_formattedActualPrice."<br/>";
                                                echo "Special Price : ".$_formattedSpecialPrice;
                                            }

                                                ?>

                                        </div>
                                    </li>
                                    <li style="text-align: left">
                                        <?php if ($_product->isSaleable()): ?>
                                           <br/> <button type="button" title="<?php echo $this->__('Add to Cart') ?>"
                                                         class="up-arrow"
                                                    onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')">
                                                <span><span><?php echo $this->__('Add to Cart') ?></span></span>

                                            </button>
                                            <br/>

                                        <?php else: ?>
                                            <p class="availability out-of-stock">
                                               <br/> <span><?php echo $this->__('Out of stock') ?></span></p>
                                        <?php endif; ?>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                <?php endforeach; ?>
            </div>
        </div>
    </div>
<?php endif; ?>